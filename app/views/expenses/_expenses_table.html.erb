<table class='actionable-table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th class='actionable-table-actions'></th>
    </tr>
  </thead>

  <tbody>
    <% expenses.each do |expense| %>
      <tr>
        <td><%= l expense.created_at, format: :short %></td>
        <td><%= number_to_currency(expense.amount, unit: current_user.currency) %></td>
        <td><%= expense.description %></td>
        <td class='actionable-table-actions'>
          <%= link_to '👀', expense, class: 'emoji-link' %>
          <%= link_to '✏️', edit_expense_path(expense), class: 'emoji-link' %>
          <%= link_to '💣', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: 'emoji-link' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
