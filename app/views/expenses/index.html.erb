<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<h2>This month: <%= number_to_currency(@sum_expenses_current_month, unit: current_user.currency) %></h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= l expense.created_at, format: :short %></td>
        <td><%= number_to_currency(expense.amount, unit: current_user.currency) %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>
